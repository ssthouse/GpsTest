<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--起点-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="起点" />

        <EditText
            android:gravity="center"
            android:text="2254357"
            android:id="@+id/id_et_begin_latitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:gravity="center"
            android:text="11394122"
            android:id="@+id/id_et_begin_longitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!--终点-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="终点" />

        <EditText
            android:gravity="center"
            android:text="2281307"
            android:id="@+id/id_et_end_latitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:gravity="center"
            android:text="11380124"
            android:id="@+id/id_et_end_longitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/id_btn_calculate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="在线规划"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/id_btn_simulate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="模拟导航"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/id_btn_real_guide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="真实导航"
            android:layout_height="match_parent" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/id_map_view"/>
</LinearLayout>